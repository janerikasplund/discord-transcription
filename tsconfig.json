{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"libsodium-wrappers": ["./node_modules/libsodium-wrappers"]
		},
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "resolveJsonModule": true,
        "strict": false
	},
	"include": ["src/*.ts"],
	"exclude": [""]
}
